generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String   @unique @db.VarChar(255)
  passwordHash  String   @map("password_hash") @db.VarChar(255)
  fullName      String?  @map("full_name") @db.VarChar(255)
  settings      Json     @default("{}")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  bankConnections  BankConnection[]
  bankAccounts     BankAccount[]
  transactions     Transaction[]
  budgets          Budget[]
  alerts           Alert[]
  categories       Category[]
  categoryPatterns CategoryPattern[]

  @@index([email])
  @@map("users")
}

model BankProvider {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  code         String   @unique @db.VarChar(100)
  authType     String   @map("auth_type") @db.VarChar(50)
  apiBaseUrl   String   @map("api_base_url") @db.VarChar(500)
  clientId     String?  @map("client_id") @db.VarChar(255)
  clientSecret String?  @map("client_secret") @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  bankConnections BankConnection[]

  @@map("bank_providers")
}

model BankConnection {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String   @map("user_id") @db.Uuid
  bankProviderId  Int      @map("bank_provider_id")
  accessToken     String   @map("access_token") @db.Text
  refreshToken    String   @map("refresh_token") @db.Text
  tokenExpiresAt  DateTime @map("token_expires_at")
  status          String   @default("active") @db.VarChar(50)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankProvider BankProvider @relation(fields: [bankProviderId], references: [id])
  bankAccounts BankAccount[]

  @@index([userId])
  @@index([status])
  @@map("bank_connections")
}

model BankAccount {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @map("user_id") @db.Uuid
  connectionId      String   @map("connection_id") @db.Uuid
  bankName          String   @map("bank_name") @db.VarChar(255)
  accountAlias      String?  @map("account_alias") @db.VarChar(255)
  accountNumberMask String?  @map("account_number_mask") @db.VarChar(50)
  accountType       String   @map("account_type") @db.VarChar(50)
  currency          String   @default("VND") @db.VarChar(10)
  balance           Decimal? @db.Decimal(15, 2)
  status            String   @default("active") @db.VarChar(50)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection BankConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([userId])
  @@index([connectionId])
  @@map("bank_accounts")
}

model Category {
  id        Int      @id @default(autoincrement())
  userId    String?  @map("user_id") @db.Uuid
  name      String   @db.VarChar(255)
  viSlug    String?  @map("vi_slug") @db.VarChar(255)
  type      String   @db.VarChar(20)
  icon      String?  @db.VarChar(50)
  color     String?  @db.VarChar(20)
  priority  Int      @default(0)
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user             User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions     Transaction[]
  budgets          Budget[]
  categoryPatterns CategoryPattern[]
  categoryRules    CategoryRule[]

  @@index([userId])
  @@index([type])
  @@index([viSlug])
  @@map("categories")
}

model Transaction {
  id                     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                 String   @map("user_id") @db.Uuid
  bankAccountId          String   @map("bank_account_id") @db.Uuid
  externalTxnId          String?  @map("external_txn_id") @db.VarChar(255)
  postedAt               DateTime @map("posted_at")
  amount                 Decimal  @db.Decimal(15, 2)
  type                   String   @db.VarChar(20)
  rawDescription         String?  @map("raw_description") @db.Text
  normalizedDescription  String?  @map("normalized_description") @db.Text
  mcc                    String?  @db.VarChar(10)
  categoryId             Int?     @map("category_id")
  classificationSource   String   @default("AUTO") @map("classification_source") @db.VarChar(20)
  notes                  String?  @db.Text
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  category    Category?   @relation(fields: [categoryId], references: [id])

  @@unique([userId, externalTxnId], name: "unique_external_txn")
  @@index([userId])
  @@index([postedAt])
  @@index([userId, postedAt])
  @@index([categoryId])
  @@index([bankAccountId])
  @@map("transactions")
}

model Budget {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  month       Int
  year        Int
  categoryId  Int      @map("category_id")
  amountLimit Decimal  @map("amount_limit") @db.Decimal(15, 2)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year, categoryId], name: "unique_budget")
  @@index([userId])
  @@index([userId, month, year])
  @@map("budgets")
}

model Alert {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  alertType String   @map("alert_type") @db.VarChar(50)
  message   String   @db.Text
  payload   Json     @default("{}")
  readFlag  Boolean  @default(false) @map("read_flag")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@index([userId, readFlag], map: "idx_alerts_unread")
  @@map("alerts")
}

model CategoryPattern {
  id          Int      @id @default(autoincrement())
  userId      String?  @map("user_id") @db.Uuid
  pattern     String   @db.VarChar(500)
  patternType String   @default("keyword") @map("pattern_type") @db.VarChar(20)
  categoryId  Int      @map("category_id")
  confidence  Decimal  @default(1.0) @db.Decimal(3, 2)
  usageCount  Int      @default(1) @map("usage_count")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([patternType])
  @@index([confidence(sort: Desc)])
  @@map("category_patterns")
}

model CategoryRule {
  id                 Int      @id @default(autoincrement())
  categoryId         Int      @map("category_id")
  keyword            String   @db.VarChar(255)
  keywordNormalized  String   @map("keyword_normalized") @db.VarChar(255)
  priority           Int      @default(0)
  isActive           Boolean  @default(true) @map("is_active")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([keyword, categoryId])
  @@index([categoryId])
  @@index([keywordNormalized])
  @@index([priority])
  @@map("category_rules")
}